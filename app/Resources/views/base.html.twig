<!DOCTYPE html>
<html lang="en-us">
<head>
    <title>Travinizer - Keep an eye on your repositories</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        {% stylesheets '../app/Resources/public/css/*' %}
        <link rel="stylesheet" type="text/css" charset="UTF-8" media="screen" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
</head>

<body class="background">
<div class="wrap">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ path('snide_travinizer_dashboard') }}">Travinizer </a><div class="subtitle">Keep an eye on your repositories</div>

                <div class="nav-collapse collapse">
                    <ul class="nav">

                    </ul>
                </div>
                <!--/.nav-collapse -->
                {% if app.user %}
                    <div class="user pull-right">Welcome {{ app.user.username }} | <a href="{{ path("fos_user_security_logout") }}" title="logout">Logout</a></div>
                {% else %}
                    <div class="user pull-right"><a href="{{ path("fos_user_registration_register") }}" title="create an account">Create an account</a> | <a href="{{ path("fos_user_security_login") }}" title="logout">Sign in</a></div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="content container">


        {% block main %}

        {% endblock %}

    </div>
</div>
{% block javascript %}
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    {% javascripts '../app/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>